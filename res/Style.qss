#ControlsPanel {
	background-color: rgb(201, 120, 26);
}

#PrevButton, #PlayButton, #NextButton, #MuteButton {
	border: none;
	background: transparent;
}

#PrevButton {
	icon: url(:/Icons/track-prev.svg);
}
#PrevButton:hover {
	icon: url(:/Icons/track-prev_hover.svg);
}

#PlayButton {
	icon: url(:/Icons/play.svg);
}
#PlayButton:hover {
	icon: url(:/Icons/play_hover.svg);
}
#PlayButton::checked {
	icon: url(:/Icons/pause.svg);
}
#PlayButton::checked:hover {
	icon: url(:/Icons/pause_hover.svg);
}

#NextButton {
	icon: url(:/Icons/track-next.svg);
}
#NextButton:hover {
	icon: url(:/Icons/track-next_hover.svg);
}

#TimeLabel {
	padding: 5px;
	color: white;
}

#InfoPanel {
	background-color: #323232;
}
